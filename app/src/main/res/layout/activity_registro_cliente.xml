<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context=".RegistroClienteActivity">


    <ImageView
        android:layout_width="201dp"
        android:layout_height="133dp"
        app:srcCompat="@drawable/erf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Registrate"
        android:textColor="@color/lavender"
        android:textSize="60dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/lavender"
        android:text="Por favor introduce los datos para crear tu cuenta "
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="Nombre"
        android:padding="10sp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edtApellidoP"
            android:layout_width="161dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Apellido Paterno"
            android:padding="10sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtApellidoM"
            android:layout_width="161dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Apellido Materno"
            android:padding="10sp"
            android:textColor="@color/black" />

    </LinearLayout>


    <EditText
        android:id="@+id/edtNumTelefono"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="Numero de telefono"
        android:padding="10sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edtFechaNaciemiento"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="Fecha de Nacimiento"
        android:padding="10sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="Correo electronico"
        android:padding="10sp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="ContraseÃ±a"
        android:padding="10sp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/edtCalle"
            android:layout_width="161dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Calle"
            android:padding="10sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtNumero"
            android:layout_width="161dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="Numero"
            android:padding="10sp"
            android:textColor="@color/black" />

    </LinearLayout>
    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:text="Registrar"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />




</LinearLayout>
