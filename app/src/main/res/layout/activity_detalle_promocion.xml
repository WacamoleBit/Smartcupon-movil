<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetallePromocionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbt_regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Regresar"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/icons8_back_50"
            app:tint="@color/lavender" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles promoción"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/lavender"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/custom_edittext"
            android:layout_gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="200dp"
                    android:id="@+id/imgv_promocion"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/person_image"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nombre promoción"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/tv_nombre_promocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Descripción"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Descripción"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Vigencia"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_fecha_inicio_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="10/12/2001 al 30/12/2001"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Restricciones"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/tv_restricciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Hasta agotar existencias"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tipo descuento"
                android:textSize="16dp"

                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv_tipo_promocion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tipo"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Cupones disponibles"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/tv_cupones_disponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="50"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Código"
                android:textSize="16dp"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/tv_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="HBAZLDER"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



        

</LinearLayout>